{
  "tasks": {
    "dev": "deno run --watch --allow-net --allow-env main.ts",
  },
  "imports": {
    "std/": "https://deno.land/std@0.208.0/",
    "deno-dom": "https://deno.land/x/deno_dom@v0.1.45/deno-dom-wasm.ts"
  },
  "lint": {
    "include": ["*.ts"],
    "exclude": ["lib/"],
    "rules": {
      "tags": ["recommended"],
      "include": ["no-unused-vars"]
    }
  },
  "fmt": {
    "useTabs": false,
    "lineWidth": 80,
    "indentWidth": 2,
    "semiColons": true,
    "singleQuote": true,
    "proseWrap": "preserve",
    "include": ["*.ts"],
    "exclude": ["lib/", "static/", "templates.ts"]
  }
}